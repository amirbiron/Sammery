# טוקן הבוט מ-BotFather
TELEGRAM_BOT_TOKEN=your_bot_token_here

# שם הערוץ (ללא @)
CHANNEL_USERNAME=AndroidAndAI

# מפתח OpenAI API
OPENAI_API_KEY=your_openai_api_key_here

# Chat ID של האדמין (המספר המזהה שלך)
